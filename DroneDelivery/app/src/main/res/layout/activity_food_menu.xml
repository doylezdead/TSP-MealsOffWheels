<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:background="#4F1162"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"

            android:background="@color/Black"
            android:fillViewport="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/CombosButton"

                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"

                    android:background="@drawable/combos" />

                <ImageButton
                    android:id="@+id/TacosButton"

                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"

                    android:background="@drawable/tacos_mix" />

                <ImageButton
                    android:id="@+id/BurritosButton"

                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"

                    android:background="@drawable/burrito_mix" />

                <ImageButton
                    android:id="@+id/SpecialtiesButton"

                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"

                    android:background="@drawable/specialties_mix" />

                <ImageButton
                    android:id="@+id/DrinksButton"

                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"

                    android:background="@drawable/drinks_mix" />
            </LinearLayout>

        </ScrollView>

        <!-- The navigation drawer -->
        <ListView android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#000000"/>
</android.support.v4.widget.DrawerLayout>
